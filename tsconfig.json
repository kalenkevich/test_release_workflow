{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/types",
    "target": "ES2020",
    "module": "nodenext",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}